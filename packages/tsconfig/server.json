{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "target": "ES2019",
        "lib": [
            "ES2019",
            "DOM"
        ],
        "isolatedModules": false,
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*.ts",
        "**/*.js"
    ]
}